.template-library {
  padding-bottom: 120rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebedf0;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  border-bottom: 1rpx solid #ebedf0;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 20rpx;
  gap: 16rpx;
}

.category-item {
  flex-shrink: 0;
}

.category-item.active {
  transform: scale(1.05);
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebedf0;
}

.left-tools {
  display: flex;
  gap: 32rpx;
}

.tool-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background-color: #f5f7fa;
  position: relative;
}

.tool-text {
  font-size: 28rpx;
  color: #666;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #e53e3e;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.right-tools {
  display: flex;
  gap: 16rpx;
}

.view-mode {
  display: flex;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
}

.mode-btn {
  padding: 12rpx 16rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-btn.active {
  background-color: #5b8dee;
  color: #fff;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

/* 模板内容区域 */
.template-content {
  padding: 20rpx;
}

/* 网格视图 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.template-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.template-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.featured-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  z-index: 2;
}

.favorite-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  z-index: 2;
}

.card-header {
  margin-bottom: 16rpx;
}

.template-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.template-category {
  /* 分类标签样式已在 t-tag 中定义 */
}

.template-preview {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #5b8dee;
}

.preview-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  font-family: "STKaiti", "KaiTi", serif;
}

.card-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

.card-footer {
  display: flex;
  justify-content: center;
}

/* 列表视图 */
.template-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-icon {
  margin-right: 16rpx;
}

.list-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f7fa;
}

.favorite-action:active {
  background-color: #e8f4ff;
}

.list-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.tag-item {
  margin-right: 8rpx !important;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 32rpx 0;
}

/* 预览弹窗 */
.preview-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
}

.preview-content {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.preview-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.preview-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f7fa;
}

.preview-body {
  margin-bottom: 32rpx;
}

.template-full-content {
  font-size: 36rpx;
  line-height: 1.8;
  color: #333;
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  font-family: "STKaiti", "KaiTi", serif;
  border: 2rpx solid #dee2e6;
}

.template-details {
  margin-bottom: 24rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

.template-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.preview-tag {
  margin-right: 0 !important;
}

.preview-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.preview-actions t-button {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .template-grid {
    grid-template-columns: 1fr;
  }
  
  .template-card {
    padding: 20rpx;
  }
  
  .card-info {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .info-item {
    justify-content: flex-start;
  }
}

/* 暗色主题支持 */
@media (prefers-color-scheme: dark) {
  .template-library {
    background-color: #1a1a1a;
  }
  
  .search-bar,
  .filter-bar,
  .toolbar,
  .template-list {
    background-color: #2d2d2d;
    border-bottom-color: #404040;
  }
  
  .template-card {
    background-color: #2d2d2d;
    box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.05);
  }
  
  .template-title {
    color: #fff;
  }
  
  .preview-text,
  .detail-value {
    color: #e0e0e0;
  }
  
  .template-full-content {
    background: linear-gradient(135deg, #2d2d2d 0%, #404040 100%);
    color: #e0e0e0;
    border-color: #555;
  }
  
  .template-preview {
    background-color: #404040;
    border-left-color: #5b8dee;
  }
  
  .tool-item {
    background-color: #404040;
  }
  
  .tool-text {
    color: #ccc;
  }
}

/* 动画效果 */
.template-card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 辅助功能 */
.template-card:focus,
.action-btn:focus {
  outline: 2rpx solid #5b8dee;
  outline-offset: 2rpx;
}

/* 滚动条样式 */
.category-scroll::-webkit-scrollbar {
  height: 6rpx;
}

.category-scroll::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.category-scroll::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

.category-scroll::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}
