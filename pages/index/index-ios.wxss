/* Apple iOS Style 字帖生成器 主页样式 */
@import "../../styles/apple-design-system.wxss";

/* Page Layout */
.ios-page {
  background: linear-gradient(135deg, #F2F2F7 0%, #E5E5EA 100%);
  min-height: 100vh;
}

/* Hero Section */
.hero-section {
  text-align: center;
  padding: 40px 24px;
  margin-bottom: 16px;
  position: relative;
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
}

.hero-icon {
  font-size: 64px;
  margin-bottom: 16px;
  display: block;
}

.hero-title {
  color: white;
  margin-bottom: 8px;
  font-weight: 700;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* Selection Card */
.selection-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.selection-icon {
  font-size: 24px;
  margin-right: 8px;
}

.selection-title {
  color: var(--ios-label-primary);
  font-weight: 600;
}

/* Template Card */
.template-card, .custom-card {
  padding: 16px;
  border-radius: 12px;
  margin-top: 12px;
  background: rgba(255, 255, 255, 0.6);
}

.template-header, .custom-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.template-badge, .custom-badge {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 6px;
  font-weight: 600;
}

.template-name {
  color: var(--ios-label-primary);
  font-weight: 600;
}

.template-preview, .custom-preview {
  color: var(--ios-label-secondary);
  margin: 8px 0;
  line-height: 1.4;
  max-height: 60px;
  overflow: hidden;
}

.template-desc {
  color: var(--ios-label-tertiary);
  margin-top: 4px;
}

.custom-count {
  color: var(--ios-blue);
  font-weight: 500;
}

/* Quick Actions Grid */
.quick-actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin-bottom: 8px;
}

.action-card {
  padding: 20px 16px;
  text-align: center;
  border-radius: 16px;
  transition: all 0.2s ease;
  min-height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.action-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.action-icon {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-bottom: 8px;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.action-title {
  color: var(--ios-label-primary);
  margin-bottom: 4px;
  font-weight: 600;
}

.action-desc {
  color: var(--ios-label-secondary);
  text-align: center;
}

/* Features Grid */
.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.feature-card {
  padding: 16px;
  text-align: center;
  transition: all 0.2s ease;
  border: 0.5px solid var(--ios-gray-lighter);
}

.feature-card:active {
  transform: scale(0.95);
  background: var(--ios-gray-lighter);
}

.feature-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 8px;
}

.feature-icon {
  font-size: 32px;
  margin-bottom: 8px;
}

.feature-title {
  color: var(--ios-label-primary);
  font-weight: 600;
  margin-bottom: 4px;
}

.feature-desc {
  color: var(--ios-label-secondary);
  text-align: center;
  line-height: 1.3;
}

/* Recent Templates List */
.template-icon {
  font-size: 16px;
}

/* Main Action Button */
.main-action {
  padding: 24px 0;
  margin-top: 32px;
}

.main-action .ios-button-primary {
  width: 100%;
  background: var(--ios-gradient-blue);
  color: white;
  font-size: 18px;
  font-weight: 600;
  border-radius: 12px;
  padding: 16px 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(0, 122, 255, 0.3);
}

.main-action .ios-button-primary:disabled {
  background: var(--ios-gray-light);
  color: var(--ios-gray);
  box-shadow: none;
}

.loading-spinner {
  margin-right: 8px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Modal Styles */
.ios-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.ios-modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
}

.ios-modal-content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 320px;
  background: var(--ios-background-secondary);
  border-radius: 16px;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  padding: 20px 20px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  color: var(--ios-label-primary);
  font-weight: 600;
}

.modal-close {
  padding: 6px 12px;
  font-size: 16px;
}

.modal-body {
  padding: 20px;
}

.custom-textarea {
  width: 100%;
  min-height: 120px;
  resize: none;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
  line-height: 1.4;
  background: var(--ios-background-tertiary);
  border: 1px solid var(--ios-gray-lighter);
}

.custom-textarea:focus {
  border-color: var(--ios-blue);
  outline: none;
}

.input-counter {
  text-align: right;
  margin-top: 8px;
  color: var(--ios-label-tertiary);
}

.modal-footer {
  padding: 0 20px 20px;
}

.modal-footer .ios-button-primary {
  width: 100%;
  background: var(--ios-gradient-blue);
  color: white;
}

/* Responsive Design */
@media (max-width: 375px) {
  .quick-actions-grid {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  .action-card {
    min-height: 80px;
    padding: 16px 12px;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
    gap: 8px;
  }
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .ios-page {
    background: linear-gradient(135deg, #1C1C1E 0%, #2C2C2E 100%);
  }
  
  .hero-section {
    background: linear-gradient(135deg, #30D158 0%, #007AFF 100%);
  }
  
  .template-card, .custom-card {
    background: rgba(44, 44, 46, 0.8);
  }
  
  .action-title, .feature-title {
    color: white;
  }
  
  .action-desc, .feature-desc {
    color: rgba(255, 255, 255, 0.7);
  }
}