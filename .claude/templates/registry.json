          "category": "feature",
          "usage_frequency": "high"
        },
        {
          "name": "api-prd",
          "file": "prd/api-prd.md", 
          "title": "API PRD Template",
          "description": "Specialized template for API development",
          "variables": ["api_name", "version", "endpoints", "author", "date"],
          "category": "technical",
          "usage_frequency": "medium"
        }
      ]
    },
    "epic": {
      "name": "Epic Breakdowns",
      "description": "Templates for breaking down PRDs into actionable epics",
      "templates": [
        {
          "name": "standard-epic",
          "file": "epic/standard-epic.md",
          "title": "Standard Epic Template", 
          "description": "Standard epic breakdown with tasks and sub-tasks",
          "variables": ["epic_name", "prd_reference", "author", "date"],
          "category": "standard",
          "usage_frequency": "high"
        },
        {
          "name": "technical-epic",
          "file": "epic/technical-epic.md",
          "title": "Technical Epic Template",
          "description": "Technical implementation focused epic template",
          "variables": ["epic_name", "architecture", "tech_stack", "author", "date"],
          "category": "technical",
          "usage_frequency": "medium"
        },
        {
          "name": "parallel-epic",
          "file": "epic/parallel-epic.md",
          "title": "Parallel Development Epic",
          "description": "Epic template for parallel development workflows", 
          "variables": ["epic_name", "work_streams", "coordinators", "author", "date"],
          "category": "workflow",
          "usage_frequency": "medium"
        }
      ]
    },
    "project": {
      "name": "Project Initialization",
      "description": "Templates for initializing different types of projects",
      "templates": [
        {
          "name": "react-project",
          "file": "project/react-claude.md",
