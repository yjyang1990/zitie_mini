{
  "version": "2.0",
  "description": "CCPM Template Registry and Management System",
  "last_updated": "2024-01-20",
  "template_categories": {
    "prd": {
      "name": "Product Requirements Documents",
      "description": "Templates for creating comprehensive PRDs",
      "templates": [
        {
          "name": "standard-prd",
          "file": "prd/standard-prd.md",
          "title": "Standard PRD Template",
          "description": "Comprehensive PRD template with all standard sections",
