  "template_management": {
    "auto_update": true,
    "version_tracking": true,
    "custom_template_support": true,
    "validation": {
      "required_sections": ["description", "variables", "usage"],
      "syntax_validation": true,
      "variable_validation": true
    }
  },
  "template_generation": {
    "variable_substitution": true,
    "conditional_sections": true,
    "date_auto_generation": true,
    "metadata_injection": true
  }
