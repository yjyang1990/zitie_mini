/* components/calligraphy-preview/calligraphy-preview.wxss */

.calligraphy-preview {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-left: 12rpx;
}

.font-selector {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.selector-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.font-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.font-option {
  padding: 12rpx 20rpx;
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #6b7280;
  transition: all 0.3s ease;
}

.font-option.selected {
  background: #5B8DEE;
  border-color: #5B8DEE;
  color: #fff;
}

.preview-area {
  position: relative;
  min-height: 400rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.preview-content {
  width: 100%;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background: #fafbfc;
  border-radius: 12rpx;
}

.grid-cell {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 4rpx;
}

.grid-cell.with-grid {
  border-color: #d1d5db;
}

.character {
  font-size: 60rpx;
  color: #1f2937;
  z-index: 2;
  position: relative;
}

.grid-lines {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.grid-line {
  position: absolute;
  background: #e5e7eb;
  opacity: 0.5;
}

.grid-line.horizontal {
  top: 50%;
  left: 0;
  width: 100%;
  height: 1rpx;
  transform: translateY(-50%);
}

.grid-line.vertical {
  top: 0;
  left: 50%;
  width: 1rpx;
  height: 100%;
  transform: translateX(-50%);
}

.preview-actions {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e5e7eb;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .grid-container {
    padding: 16rpx;
  }
  
  .grid-cell {
    width: 100rpx !important;
    height: 100rpx !important;
  }
  
  .character {
    font-size: 48rpx;
  }
  
  .preview-actions {
    flex-direction: column;
    align-items: center;
  }
}
