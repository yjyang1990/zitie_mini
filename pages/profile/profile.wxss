/* pages/profile/profile.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #F7F9FC;
}

.user-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #666;
}

.login-prompt {
  text-align: center;
  padding: 32rpx 0;
}

.login-text {
  font-size: 28rpx;
  color: #666;
  margin: 16rpx 0 24rpx;
}

/* TDesign 组件样式覆盖 */
.t-cell-group {
  margin-bottom: 32rpx;
}

.t-cell {
  border-radius: 12rpx;
}

/* 响应式设计 */
@media (max-width: 600px) {
  .container {
    padding: 24rpx;
  }
  
  .user-section {
    padding: 24rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .nickname {
    font-size: 32rpx;
  }
}
