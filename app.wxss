/**app.wxss**/
/* 字帖生成小程序全局样式 */

/* 🎨 中和设计主题色彩系统 */
page {
  --primary-color: #5B8DEE;      /* 智慧蓝 - 主品牌色 */
  --secondary-color: #48D6A0;    /* 薄荷绿 - 活力点缀 */
  --accent-color: #FFB547;       /* 暖橙 - 强调色 */
  
  --success-color: #52C41A;      /* 成功绿 */
  --warning-color: #FAAD14;      /* 警告橙 */
  --error-color: #F5222D;        /* 错误红 */
  
  --text-primary: #2C3E50;       /* 主文字 - 深墨色 */
  --text-secondary: #8492A6;     /* 次要文字 */
  --bg-primary: #FFFFFF;         /* 主背景 */
  --bg-secondary: #F7F9FC;       /* 次背景 - 淡蓝灰 */
  --bg-card: #FFFFFF;           /* 卡片背景 */
  --border-color: #E8ECF1;       /* 边框色 */
  
  /* 新的渐变系统 */
  --gradient-primary: linear-gradient(135deg, #5B8DEE 0%, #48D6A0 100%);
  --gradient-card: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(247,249,252,0.95) 100%);
  --gradient-bg: linear-gradient(135deg, #F7F9FC 0%, #E8F2FF 50%, #F0F8FF 100%);
}

/* 全局字体设置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 32rpx;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-feature-settings: "kern";
}

/* 通用容器样式 */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 40rpx;
  text-align: center;
}

/* 卡片样式 */
.card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(91, 141, 238, 0.08);
}

/* 按钮样式 */
.btn-primary {
  background: var(--gradient-primary);
  color: white;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(91, 141, 238, 0.3);
}

.btn-primary:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

/* 输入框样式 */
.input {
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(91, 141, 238, 0.1);
}

/* 工具类 */
.text-center { text-align: center; }
.text-primary { color: var(--primary-color); }
.text-secondary { color: var(--text-secondary); }
.mb-20 { margin-bottom: 20rpx; }
.mb-40 { margin-bottom: 40rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-40 { margin-top: 40rpx; }

/* 文字清晰度优化 */
.text-sharp {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

.text-bold {
  font-weight: 700;
  letter-spacing: -0.02em;
}

.text-contrast {
  color: #1C1C1E;
  font-weight: 600;
}

.text-high-contrast {
  color: #000000;
  font-weight: 700;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
}