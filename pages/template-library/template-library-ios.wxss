/* Apple iOS Style 模板库页面样式 */
@import "../../styles/apple-design-system.wxss";

/* Page Layout */
.template-library-page {
  background: linear-gradient(135deg, #F2F2F7 0%, #E5E5EA 100%);
}

/* Navigation Bar */
.navbar-left, .navbar-right {
  width: 60px;
  display: flex;
  align-items: center;
}

.navbar-right {
  justify-content: flex-end;
}

.nav-button {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  transition: all 0.2s ease;
}

.nav-button:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.nav-icon {
  font-size: 20px;
  color: var(--ios-blue);
  font-weight: 600;
}

/* Search Section */
.search-section {
  margin-bottom: 16px;
}

.ios-search-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12px;
  padding: 8px 12px;
  border: 0.5px solid var(--ios-gray-lighter);
}

.search-icon {
  font-size: 18px;
  margin-right: 8px;
  color: var(--ios-gray);
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  font-size: 17px;
  color: var(--ios-label-primary);
}

.search-input::placeholder {
  color: var(--ios-gray);
}

.clear-button {
  padding: 4px;
  margin-left: 8px;
}

.clear-icon {
  font-size: 14px;
  color: var(--ios-gray);
}

/* Filter Section */
.filter-section {
  margin-bottom: 16px;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-pills {
  display: flex;
  gap: 8px;
  padding: 0 4px;
}

.filter-pill {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  padding: 6px 12px;
  border: 0.5px solid var(--ios-gray-lighter);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  transition: all 0.2s ease;
  white-space: nowrap;
}

.filter-pill.active {
  background: var(--ios-blue);
  border-color: var(--ios-blue);
}

.filter-pill:active {
  transform: scale(0.95);
}

.pill-icon {
  font-size: 14px;
  margin-right: 4px;
}

.pill-text {
  color: var(--ios-label-primary);
  font-weight: 500;
}

.filter-pill.active .pill-text {
  color: white;
}

/* Stats Header */
.stats-header {
  margin-bottom: 20px;
  padding: 16px 20px;
}

.stats-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  color: var(--ios-blue);
  font-weight: 700;
  margin-bottom: 2px;
}

.stats-label {
  color: var(--ios-label-secondary);
}

.stats-divider {
  width: 1px;
  height: 32px;
  background: var(--ios-gray-lighter);
  margin: 0 16px;
}

/* Loading Section */
.loading-section {
  padding: 40px 20px;
  text-align: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  font-size: 32px;
  margin-bottom: 12px;
  animation: spin 1s linear infinite;
}

.loading-text {
  color: var(--ios-label-secondary);
}

/* Templates Grid */
.templates-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin-bottom: 20px;
}

.template-card-grid {
  padding: 16px;
  transition: all 0.2s ease;
  border: 0.5px solid var(--ios-gray-lighter);
}

.template-card-grid:active {
  transform: scale(0.95);
  background: var(--ios-gray-lighter);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.template-badge {
  width: 24px;
  height: 24px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-icon {
  font-size: 12px;
  color: white;
}

.favorite-btn {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-icon {
  font-size: 16px;
  color: var(--ios-orange);
}

.card-content {
  margin-bottom: 12px;
}

.template-title {
  color: var(--ios-label-primary);
  font-weight: 600;
  margin-bottom: 4px;
  line-height: 1.3;
}

.template-preview {
  color: var(--ios-label-secondary);
  line-height: 1.3;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  margin-top: auto;
}

.template-meta {
  display: flex;
  gap: 8px;
}

.meta-item {
  display: flex;
  align-items: center;
  background: var(--ios-background-tertiary);
  border-radius: 6px;
  padding: 2px 6px;
}

.meta-icon {
  font-size: 10px;
  margin-right: 2px;
}

.meta-text {
  color: var(--ios-label-secondary);
  font-size: 10px;
}

/* Templates List */
.templates-list {
  margin-bottom: 20px;
}

.template-list-item {
  padding: 16px 20px;
}

.list-icon {
  font-size: 16px;
  color: white;
}

.template-tags {
  display: flex;
  gap: 8px;
  margin-top: 4px;
}

.tag-item {
  font-size: 11px;
  color: var(--ios-label-tertiary);
  background: var(--ios-background-tertiary);
  border-radius: 4px;
  padding: 2px 6px;
}

.tag-item.featured {
  background: var(--ios-orange);
  color: white;
}

.list-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.action-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: var(--ios-gray-lighter);
}

.action-icon {
  font-size: 16px;
  color: var(--ios-orange);
}

/* Empty State */
.empty-section {
  padding: 60px 20px;
  text-align: center;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-title {
  color: var(--ios-label-primary);
  margin-bottom: 8px;
  font-weight: 600;
}

.empty-subtitle {
  color: var(--ios-label-secondary);
  margin-bottom: 24px;
  line-height: 1.4;
}

/* Preview Modal */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.preview-content {
  width: 100%;
  max-width: 360px;
  max-height: 80vh;
  overflow-y: auto;
  animation: modalSlideIn 0.3s ease-out;
}

.preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 0.5px solid var(--ios-gray-lighter);
}

.close-btn, .share-btn {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background: var(--ios-gray-lighter);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.close-btn:active, .share-btn:active {
  transform: scale(0.9);
  background: var(--ios-gray-light);
}

.close-icon, .share-icon {
  font-size: 16px;
  color: var(--ios-gray-dark);
}

.preview-title {
  color: var(--ios-label-primary);
  font-weight: 600;
  text-align: center;
  flex: 1;
  margin: 0 12px;
}

.preview-body {
  margin-bottom: 24px;
}

.template-content-preview {
  padding: 24px;
  text-align: center;
  border-radius: 12px;
  margin-bottom: 20px;
  background: rgba(255, 255, 255, 0.6);
}

.content-text {
  color: var(--ios-label-primary);
  font-weight: 600;
  line-height: 1.4;
}

.template-details .ios-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  color: var(--ios-label-secondary);
}

.detail-value {
  color: var(--ios-label-primary);
  font-weight: 500;
}

.preview-actions {
  display: flex;
  gap: 12px;
}

.preview-actions .ios-button-secondary,
.preview-actions .ios-button-primary {
  flex: 1;
  padding: 14px 16px;
  text-align: center;
}

/* Picker Modals */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.picker-content {
  width: 100%;
  max-width: 414px;
  border-radius: 16px 16px 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.picker-header {
  text-align: center;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 0.5px solid var(--ios-gray-lighter);
  color: var(--ios-label-primary);
  font-weight: 600;
}

.picker-options {
  display: flex;
  flex-direction: column;
}

.picker-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 0.5px solid var(--ios-gray-lighter);
  transition: background 0.2s ease;
}

.picker-option:last-child {
  border-bottom: none;
}

.picker-option:active {
  background: var(--ios-gray-lighter);
}

.picker-option.active {
  background: rgba(0, 122, 255, 0.1);
}

.option-text {
  color: var(--ios-label-primary);
  font-weight: 400;
}

.picker-option.active .option-text {
  color: var(--ios-blue);
  font-weight: 600;
}

.option-check {
  font-size: 18px;
  color: var(--ios-blue);
  font-weight: 600;
}

/* Responsive Design */
@media (max-width: 375px) {
  .templates-grid {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  .template-card-grid {
    padding: 12px;
  }
  
  .stats-content {
    padding: 0 12px;
  }
  
  .stats-divider {
    margin: 0 8px;
  }
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .template-library-page {
    background: linear-gradient(135deg, #1C1C1E 0%, #2C2C2E 100%);
  }
  
  .ios-search-bar {
    background: rgba(44, 44, 46, 0.8);
    border-color: rgba(84, 84, 88, 0.6);
  }
  
  .filter-pill {
    background: rgba(44, 44, 46, 0.8);
    border-color: rgba(84, 84, 88, 0.6);
  }
  
  .template-content-preview {
    background: rgba(44, 44, 46, 0.6);
  }
  
  .template-title, .preview-title {
    color: white;
  }
  
  .template-preview, .empty-subtitle {
    color: rgba(255, 255, 255, 0.7);
  }
}