/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #F7F9FC;
}

.page-header {
  text-align: center;
  padding: 48rpx 0;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin: 24rpx 0 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.action-section {
  margin: 48rpx 0;
  padding: 0 16rpx;
}

/* TDesign 组件样式覆盖 */
.t-cell-group {
  margin-bottom: 32rpx;
}

.t-cell {
  border-radius: 12rpx;
}

.t-button {
  border-radius: 12rpx;
}

/* 响应式设计 */
@media (max-width: 600px) {
  .container {
    padding: 24rpx;
  }
  
  .page-header {
    padding: 32rpx 0;
  }
  
  .page-title {
    font-size: 42rpx;
  }
  
  .page-subtitle {
    font-size: 26rpx;
  }
}
