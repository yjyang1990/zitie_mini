<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="page-title">我的</view>
  
  <!-- 用户信息卡片 -->
  <view class="card user-info">
    <view class="user-avatar">
      <image src="../../images/default-avatar.png" class="avatar-img" mode="aspectFill"></image>
    </view>
    <view class="user-details">
      <view class="user-name">字帖爱好者</view>
      <view class="user-stats">
        <view class="stat-item">
          <view class="stat-number">0</view>
          <view class="stat-label">作品数</view>
        </view>
        <view class="stat-item">
          <view class="stat-number">0</view>
          <view class="stat-label">练习天数</view>
        </view>
        <view class="stat-item">
          <view class="stat-number">0</view>
          <view class="stat-label">收藏数</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="card">
    <view class="menu-list">
      <view class="menu-item" bindtap="goToMyWorks">
        <view class="menu-icon">📝</view>
        <view class="menu-text">我的作品</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToFavorites">
        <view class="menu-icon">⭐</view>
        <view class="menu-text">我的收藏</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToTemplates">
        <view class="menu-icon">📋</view>
        <view class="menu-text">模板管理</view>
        <view class="menu-arrow">></view>
      </view>
    </view>
  </view>

  <!-- 设置菜单 -->
  <view class="card">
    <view class="section-title">设置</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="goToSettings">
        <view class="menu-icon">⚙️</view>
        <view class="menu-text">通用设置</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToHelp">
        <view class="menu-icon">❓</view>
        <view class="menu-text">帮助中心</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToAbout">
        <view class="menu-icon">ℹ️</view>
        <view class="menu-text">关于我们</view>
        <view class="menu-arrow">></view>
      </view>
    </view>
  </view>
</view>