{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    // "outDir": "./dist",  // Disabled - output files alongside TS files
    "baseUrl": ".",
    "paths": {
      "utils/*": ["./utils/*"],
      "components/*": ["./components/*"],
      "types/*": ["./types/*"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "pages/**/*.ts",
    "components/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.ts",
    "app.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    ".claude/**/*",
    "prototype/**/*",
    "**/*.md",
    "**/*.html"
  ],
  "compileOnSave": false
}
